<Window x:Class="CyberAccessMonitor.HistoricoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Histórico de Eventos" Height="400" Width="600">
    <Grid Margin="10">
        <ListView x:Name="ListaEventos">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Data/Hora" Width="150" DisplayMemberBinding="{Binding DataHora}"/>
                    <GridViewColumn Header="Tipo" Width="150" DisplayMemberBinding="{Binding Tipo}"/>
                    <GridViewColumn Header="Descrição" Width="250" DisplayMemberBinding="{Binding Descricao}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
