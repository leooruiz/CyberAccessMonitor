<Window x:Class="CyberAccessMonitor.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Painel de Controle" Height="400" Width="500">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Painel de Controle" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <Button Content="Registrar Falha" Click="RegistrarFalha_Click" Margin="0,5"/>
            <Button Content="Visualizar Histórico" Click="Historico_Click" Margin="0,5"/>
            <Button Content="Gerar Alerta" Click="Alerta_Click" Margin="0,5"/>
            <Button Content="Exportar Dados" Click="Exportar_Click" Margin="0,5"/>
            <Button Content="Sair" Click="Sair_Click" Margin="0,20"/>
        </StackPanel>
    </Grid>
</Window>
